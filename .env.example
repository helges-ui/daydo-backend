# Django Configuration
# Copy this file to .env and fill in your actual values
# .env is gitignored and will not be committed to version control

# Secret Key (generate a new one for production!)
# Use: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-change-this-in-production

# Debug Mode
DEBUG=True

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DB_NAME=daydo
DB_USER=postgres
DB_PASSWORD=your-database-password
DB_HOST=localhost
DB_PORT=5432

# Mapbox Public Token
# Get your token from https://www.mapbox.com/account/tokens/
# This token is served to authenticated frontend clients for map rendering
MAPBOX_PUBLIC_TOKEN=pk.your-mapbox-public-token-here

# CORS Configuration (comma-separated origins)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Email Configuration (optional)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=localhost
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# AWS Configuration (optional, for production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Logging
LOG_FILE=django.log
LOG_LEVEL=INFO
